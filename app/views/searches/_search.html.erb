<% div_for search do %>
	<h2><%= link_to h(search.title), "http://" + search.search, :confirm=> "Now leaving Resort Realty..." %></h2>
	<%= simple_format h(search.comment) %>
		<% if admin? %>
		<%= link_to 'Edit', edit_search_path(search) %> |
		<%= link_to 'Destroy', search, :method => :delete, :confirm => "Are you sure?" %> |
	<% end %>
<% end %>